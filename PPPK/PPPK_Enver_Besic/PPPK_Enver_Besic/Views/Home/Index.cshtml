@model IEnumerable<PPPK_Enver_Besic.Models.Patient>

@{
    ViewData["Title"] = "Pacijenti";
}

<div class="row mb-3">
    <div class="col-md-12">
        <form asp-controller="Home" asp-action="Search" method="get" class="form-inline">
            <div class="form-group mr-2">
                <input type="text" class="form-control" name="searchTerm" placeholder="Pretraži po prezimenu ili OIB-u">
            </div>
            <button type="submit" class="btn btn-primary">Pretraži</button>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h2 class="mb-0">Popis pacijenata</h2>
    </div>
    <div class="card-body p-0">
        <table class="table table-striped table-bordered mb-0">
            <thead class="thead-dark">
                <tr>
                    <th>Ime</th>
                    <th>Prezime</th>
                    <th>OIB</th>
                    <th>Datum rođenja</th>
                    <th>Spol</th>
                    <th>Akcije</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var patient in Model)
                    {
                        <tr>
                            <td>
                                <a asp-controller="Patient" asp-action="Details" asp-route-id="@patient.Id">
                                    @patient.FirstName
                                </a>
                            </td>
                            <td>
                                <a asp-controller="Patient" asp-action="Details" asp-route-id="@patient.Id">
                                    @patient.LastName
                                </a>
                            </td>
                            <td>@patient.OIB</td>
                            <td>@patient.DateOfBirth.ToShortDateString()</td>
                            <td>@patient.Gender</td>
                            <td>
                                <a class="btn btn-sm btn-warning" asp-controller="Patient" asp-action="Edit" asp-route-id="@patient.Id">Edit</a>
                                <a class="btn btn-sm btn-danger" asp-controller="Patient" asp-action="Delete" asp-route-id="@patient.Id">Delete</a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center">Nema pronađenih pacijenata.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
