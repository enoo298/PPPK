@model IEnumerable<PPPK_Enver_Besic.Models.Examination>

@{
    ViewData["Title"] = "Pregledi";
}

<div class="row mb-3">
    <div class="col-md-12">
        <a class="btn btn-primary" asp-controller="Examination" asp-action="Create">Dodaj pregled</a>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h2 class="mb-0">Popis pregleda</h2>
    </div>
    <div class="card-body p-0">
        <table class="table table-striped table-bordered mb-0">
            <thead class="thead-dark">
                <tr>
                    <th>Datum i vrijeme</th>
                    <th>Tip pregleda</th>
                    <th>Pacijent</th>
                    <th>Akcije</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var exam in Model)
                    {
                        <tr>
                            <td>@exam.ExaminationDateTime.ToString("g")</td>
                            <td>@exam.ExaminationType</td>
                            <td>
                                @(exam.Patient != null
                                    ? exam.Patient.FirstName + " " + exam.Patient.LastName
                                    : "N/A")
                            </td>
                            <td>
                                <a class="btn btn-sm btn-warning"
                                   asp-controller="Examination"
                                   asp-action="Edit"
                                   asp-route-id="@exam.Id">
                                    Edit
                                </a>
                                <a class="btn btn-sm btn-danger"
                                   asp-controller="Examination"
                                   asp-action="Delete"
                                   asp-route-id="@exam.Id">
                                    Delete
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" class="text-center">Nema zapisa pregleda.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
